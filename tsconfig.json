{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "webworker",
      "dom"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "paths": {
      "*": ["./src/*"]
    },
    "esModuleInterop": true,
    "types": [
      "@webgpu/types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "build",
    "misc",
    "node_modules",
    "playwright-report",
    "test-results",
    "tests"
  ]
}
